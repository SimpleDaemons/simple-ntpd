# This file is generated by CMake and should not be edited manually

@PACKAGE_INIT@

# Include the targets file
include("${CMAKE_CURRENT_LIST_DIR}/simple-ntpd-targets.cmake")

# Set package variables
set(simple-ntpd_VERSION "@simple-ntpd_VERSION@")
set(simple-ntpd_VERSION_MAJOR "@simple-ntpd_VERSION_MAJOR@")
set(simple-ntpd_VERSION_MINOR "@simple-ntpd_VERSION_MINOR@")
set(simple-ntpd_VERSION_PATCH "@simple-ntpd_VERSION_PATCH@")

# Check if all required components are available
check_required_components(simple-ntpd)

# Export package variables
set(simple-ntpd_FOUND TRUE)
set(simple-ntpd_INCLUDE_DIRS "@CMAKE_INSTALL_PREFIX@/include")
set(simple-ntpd_LIBRARY_DIRS "@CMAKE_INSTALL_PREFIX@/lib")
set(simple-ntpd_BINARY_DIRS "@CMAKE_INSTALL_PREFIX@/bin")

# Set compile definitions
set(simple-ntpd_COMPILE_DEFINITIONS "")
if(BUILD_SHARED_LIBS)
    list(APPEND simple-ntpd_COMPILE_DEFINITIONS "SIMPLE_NTPD_SHARED")
endif()

# Set compile options
set(simple-ntpd_COMPILE_OPTIONS "")
if(CMAKE_CXX_COMPILER_ID MATCHES "GNU|Clang")
    list(APPEND simple-ntpd_COMPILE_OPTIONS "-Wall" "-Wextra" "-Wpedantic")
endif()

# Set link options
set(simple-ntpd_LINK_OPTIONS "")
if(CMAKE_CXX_COMPILER_ID MATCHES "GNU|Clang")
    list(APPEND simple-ntpd_LINK_OPTIONS "-Wl,--as-needed")
endif()

